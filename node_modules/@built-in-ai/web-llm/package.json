    "@mlc-ai/web-llm": "^0.2.79"
  },
  "peerDependencies": {
    "ai": ">=5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "jsdom": "^26.1.0",
    "rimraf": "^5.0.0",
