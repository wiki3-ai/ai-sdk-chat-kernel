    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "dev:example": "npm run build && npm run -w examples/next-hybrid dev"
  },
  "keywords": [
    "ai",
    "ai-sdk",
    "vercel",
    "webllm",
    "web-llm",
    "browser-ai",
    "mlc-ai",
