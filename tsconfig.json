{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@jupyterlite/*": ["node_modules/@jupyterlite/*"],
      "@jupyterlab/*": ["node_modules/@jupyterlab/*"],
      "@lumino/*": ["node_modules/@lumino/*"]
    }
  },
  "include": ["src"]
}
