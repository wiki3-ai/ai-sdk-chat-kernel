{
    "name": "Develop with JupyterLite in JupyterLab",
    "image": "quay.io/jupyter/minimal-notebook:lab-4.5.0",
    "forwardPorts": [
        8888,
        8000,
        3000
    ],
    "portsAttributes": {
        "8888": {
            "label": "JupyterLab",
            "requireLocalPort": true
        },
        "3000": {
            "label": "MyST",
            "requireLocalPort": true
        },
        "8000": {
            "label": "JupyterLite",
            "requireLocalPort": true
        }
    },
    "containerEnv": {
        "JUPYTER_PORT": "8888",
        "JUPYTERLITE_PORT": "8000",
        "HOST": "0.0.0.0",
        "MYST_PORT": "3000"
        // "RESTARTABLE": "yes"
    },
    "postCreateCommand": "mamba install -y -c conda-forge jupyterlite mystmd nodejs nodeenv && pip install -e ."
    // "postStartCommand": "jupyter lite serve"
}